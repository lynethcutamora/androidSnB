<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc" >
    
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/selfDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Investor Registration Form"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <EditText
        android:id="@+id/editText_fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="0.2"
        android:background="@drawable/backcolor"
		android:textColor="#00ffff"
		android:hint="Firstname"
		android:singleLine="true"
        android:inputType="textPersonName" >

        <requestFocus />
        </EditText>
        
        <EditText
        android:id="@+id/editText_lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="0.2"
        android:background="@drawable/backcolor"
		android:textColor="#00ffff"
		android:hint="Lastname"
		android:singleLine="true"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText_mi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:background="@drawable/backcolor"
		android:textColor="#00ffff"
		android:hint="Middle Initial"
		android:singleLine="true"
        android:ems="10" />

    <EditText
        android:id="@+id/editText_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="0.2"
        android:background="@drawable/backcolor"
		android:textColor="#00ffff"
		android:hint="Age"
		android:singleLine="true"
        android:inputType="number" />

    <EditText
        android:id="@+id/editText_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:background="@drawable/backcolor"
		android:textColor="#00ffff"
		android:hint="Gender"
		android:singleLine="true"
        android:ems="10" />

    <EditText
        android:id="@+id/editText_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="0.2"
        android:background="@drawable/backcolor"
		android:textColor="#00ffff"
		android:hint="Address"
		android:singleLine="true"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/editText_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="0.2"
        android:background="@drawable/backcolor"
		android:textColor="#00ffff"
		android:hint="Email"
		android:singleLine="true"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editText_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="0.2"
        android:background="@drawable/backcolor"
		android:textColor="#00ffff"
		android:hint="Password"
		android:singleLine="true"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editText_re_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:background="@drawable/backcolor"
        android:ems="10"
        android:hint="Re-Type Password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="#00ffff" />
    
    <EditText 
        android:id="@+id/editText_shortselfdescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:background="@drawable/backcolor"
        android:ems="10"
        android:hint="Short Self Description"
        android:inputType="text"
        android:singleLine="true"
        android:textColor="#00ffff" />
    
    <EditText 
        android:id="@+id/nameofbusiness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:background="@drawable/backcolor"
        android:ems="10"
        android:hint="Name Of Business"
        android:inputType="text"
        android:singleLine="true"
        android:textColor="#00ffff" />
    
    <EditText 
        android:id="@+id/businesstype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:background="@drawable/backcolor"
        android:ems="10"
        android:hint="Business Type"
        android:inputType="text"
        android:singleLine="true"
        android:textColor="#00ffff" />
    
    <Button 
        android:id="@+id/btn_submit_investor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:text="Submit" />

    </LinearLayout>
    
</RelativeLayout>
