<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6dddbc" >
    
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ideator Registration Form"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="0.2"
        android:background="@drawable/backcolor"
		android:textColor="#00ffff"
		android:hint="Firstname"
		android:singleLine="true"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="0.2"
        android:background="@drawable/backcolor"
		android:textColor="#00ffff"
		android:hint="Lastname"
		android:singleLine="true"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:background="@drawable/backcolor"
		android:textColor="#00ffff"
		android:hint="Middle Initial"
		android:singleLine="true"
        android:ems="10" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="0.2"
        android:background="@drawable/backcolor"
		android:textColor="#00ffff"
		android:hint="Age"
		android:singleLine="true"
        android:inputType="number" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:background="@drawable/backcolor"
		android:textColor="#00ffff"
		android:hint="Gender"
		android:singleLine="true"
        android:ems="10" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="0.2"
        android:background="@drawable/backcolor"
		android:textColor="#00ffff"
		android:hint="Address"
		android:singleLine="true"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="0.2"
        android:background="@drawable/backcolor"
		android:textColor="#00ffff"
		android:hint="Email"
		android:singleLine="true"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editText8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="0.2"
        android:background="@drawable/backcolor"
		android:textColor="#00ffff"
		android:hint="Password"
		android:singleLine="true"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editText9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:background="@drawable/backcolor"
        android:ems="10"
        android:hint="Re-Type Password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="#00ffff" />
    
    <EditText 
        android:id="@+id/shortselfdescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:background="@drawable/backcolor"
        android:ems="10"
        android:hint="Short Self Description"
        android:inputType="text"
        android:singleLine="true"
        android:textColor="#00ffff" />

    <Button
        android:id="@+id/btn_submit_ideator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:background="@android:color/transparent"
        android:text="Submit" />

    </LinearLayout>
    
</RelativeLayout>
