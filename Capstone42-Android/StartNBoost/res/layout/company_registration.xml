<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc" >
    
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Company Registration Form"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText 
            android:id="@+id/edittext_company_name"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:ems="10"
        	android:layout_weight="1"
        	android:background="@drawable/backcolor"
			android:hint="Company Name"
			android:singleLine="true"
			android:inputType="text" >
			<requestFocus />
    	</EditText>

        <EditText
            android:id="@+id/edittext_company_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Email"
            android:background="@drawable/backcolor"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/edittext_company_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Password"
            android:background="@drawable/backcolor"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/edittext_company_retypepassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Re-Type password"
            android:background="@drawable/backcolor"
            android:inputType="textPassword" />
     
        <EditText
            android:id="@+id/edittext_company_businesstype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/backcolor"
            android:ems="10"
            android:hint="Type of Business"
            android:inputType="text"
            android:singleLine="true" />

        <EditText
            android:id="@+id/edittext_company_yearfounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Year Founded"
            android:background="@drawable/backcolor"
            android:inputType="number" />

        <EditText
            android:id="@+id/edittext_company_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:background="@drawable/backcolor"
            android:hint="Short Business Description" />
	
	    <Button
	        android:id="@+id/btn_submit_company"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="Submit" />

    </LinearLayout>
    
</RelativeLayout>
